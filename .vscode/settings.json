// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true,
        "**/*.bin": true
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#eb2935",
        "activityBar.activeBorder": "#0d5708",
        "activityBar.background": "#eb2935",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#0d5708",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#ce131f",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#eb2935",
        "titleBar.activeBackground": "#ce131f",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#ce131f99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#ce131f"
}
